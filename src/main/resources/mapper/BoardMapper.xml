<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.boardapi.board.mapper.board.BoardMapper" >
    <resultMap id="BaseResultMap" type="Board">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
    </resultMap>

    <sql id="columns">
        ${alias}id AS ${prefix}id
        , ${alias}title AS ${prefix}title
        , ${alias}content AS ${prefix}content
        , ${alias}create_date AS ${prefix}create_date
        , ${alias}update_date AS ${prefix}update_date
    </sql>

    <insert id="insert" parameterType="Board">
        INSERT INTO board
        (id
        , title
        , content
        ) VALUES
            (
             #{id}
            ,#{title}
            ,#{content}
            )
    </insert>

    <select id="search" resultMap="BaseResultMap">
        SELECT
        <include refid="columns">
            <property name="alias" value=""/>
            <property name="prefix" value=""/>
        </include>
        FROM board
    </select>

</mapper>